<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/round_black">


    <TextView
        android:id="@+id/examName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:maxLines="1"
        android:text="Passenger Name, Passenger Mobile No"
        android:textColor="@color/black"
        android:textSize="16sp" />



    <TextView
        android:id="@+id/examDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/examName"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:text="Passenger Current Location"
        android:textSize="16sp"/>



    <TextView
        android:id="@+id/examMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/examDate"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:text="Passenger Destination"
        android:textSize="16sp"/>


    <TextView
        android:id="@+id/border2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_alignParentBottom="true"
        android:background="#808080"/>
    <TextView
        android:id="@+id/border3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_alignParentBottom="true"
        android:background="#808080"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/Accept"
        android:background="@drawable/back_primary"
        android:textColor="#FFFFFF"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="10dp"
        android:text="Accept"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/Decline"
        android:background="@drawable/back_primary"
        android:textColor="#FFFFFF"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="130dp"
        android:text="Reject"/>


</RelativeLayout>
